{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "path": ["./node_modules/path-browserify"]
    },
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "baseUrl": "./"
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
