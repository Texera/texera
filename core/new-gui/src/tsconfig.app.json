{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "allowSyntheticDefaultImports": true
  },
  // ask Angular to check template error during the compilation process
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  },
  "files": ["main.ts", "polyfills.ts"],
  "include": ["src/**/*.d.ts"]
}
